<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E3A5F"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#5F4E8E"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="@string/title" />


    <ImageView
        android:id="@+id/flashlight_toggle"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="145dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corners"
        android:padding="20dp"
        android:src="@drawable/flashoff" />

    <TextView
        android:id="@+id/flashlight_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flashlight_toggle"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Flashlight OFF"
        android:textColor="#D3D3D3"
        android:textStyle="bold"
        android:textSize="18sp" />
</RelativeLayout>
